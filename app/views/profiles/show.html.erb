<div class="row">
<div class="span8">
  <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>

  <h3>Email: <%= @user.email %></h3>
  <h3>Birthday: <%= @user.birthday %></h3>
  <h3>Age: 
    <% if @user.birthday!=nil %>
    <%= Time.now.year-@user.birthday.year %>
    <% end %>
  </h3>
</div>
<div class="span4">
  <% if current_user.id==@user.id %>
  <%= link_to "Edit Profile",{ :controller => "profiles", :action => "edit", :id=> current_user.id}, :class=>"btn" %>
  <% else %>
  <%= link_to "Send him/her a message", {}, :class=>"btn" %>
  <% end %>
</div>
</div>
